---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<!-- Add Font Awesome for social icons -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
		<style>
			/* Page loader */
			.page-loader {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background-color: #000;
				z-index: 9999;
				display: flex;
				align-items: center;
				justify-content: center;
				transition: opacity 0.5s ease, visibility 0.5s ease;
			}
			
			.page-loader.fade-out {
				opacity: 0;
				visibility: hidden;
			}
			
			.loader-logo {
				width: 150px;
				height: auto;
				animation: pulse 1.5s infinite;
			}
			
			@keyframes pulse {
				0% { opacity: 0.5; transform: scale(0.95); }
				50% { opacity: 1; transform: scale(1); }
				100% { opacity: 0.5; transform: scale(0.95); }
			}
			
			/* Main hero section */
			.hero {
				height: 100vh;
				min-height: 800px;
				background-color: #000;
				color: #fff;
				position: relative;
				overflow: hidden;
				padding-top: 100px;
			}
			
			.hero::after {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background: linear-gradient(to bottom, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.8) 100%);
				z-index: 1;
			}
			
			.hero-content {
				position: relative;
				z-index: 2;
				max-width: 1000px;
				margin: 0 auto;
				padding: 0 1.5rem;
				display: flex;
				flex-direction: column;
				justify-content: center;
				height: calc(100vh - 180px);
			}
			
			.hero-text {
				max-width: 800px;
			}
			
			.hero h1 {
				font-size: 4rem;
				font-weight: 800;
				line-height: 1.1;
				margin-bottom: 2rem;
				opacity: 0;
				animation: fadeInUp 1s ease forwards;
				animation-delay: 0.5s;
			}
			
			.hero p {
				font-size: 1.1rem;
				line-height: 1.6;
				margin-bottom: 2rem;
				color: rgba(255, 255, 255, 0.9);
				max-width: 700px;
				opacity: 0;
				animation: fadeInUp 1s ease forwards;
				animation-delay: 0.8s;
			}
			
			.hero-buttons {
				display: flex;
				gap: 1rem;
				margin-top: 1rem;
				opacity: 0;
				animation: fadeInUp 1s ease forwards;
				animation-delay: 1s;
			}
			
			@keyframes fadeInUp {
				from {
					opacity: 0;
					transform: translateY(30px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}
			
			/* Stats counter section */
			.stats-counter {
				background-color: var(--light-color);
				padding: 5rem 0;
				text-align: center;
				position: relative;
			}
			
			.stats-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
				gap: 3rem;
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 1.5rem;
			}
			
			.stat-item {
				display: flex;
				flex-direction: column;
				align-items: center;
			}
			
			.stat-number {
				font-size: 3.5rem;
				font-weight: 800;
				color: var(--primary-color);
				margin-bottom: 0.5rem;
				position: relative;
				display: flex;
				align-items: center;
			}
			
			.stat-plus {
				font-size: 2.5rem;
				margin-left: 0.2rem;
			}
			
			.stat-label {
				font-size: 1.1rem;
				color: var(--text-light);
				text-transform: uppercase;
				letter-spacing: 1px;
			}
			
			/* Services section */
			.services {
				padding: 8rem 0;
				background-color: #fff;
			}
			
			.services-heading {
				text-align: center;
				max-width: 800px;
				margin: 0 auto 5rem;
				padding: 0 1.5rem;
			}
			
			.services-heading h2 {
				font-size: 2.5rem;
				margin-bottom: 1rem;
				color: var(--text-color);
				position: relative;
				display: inline-block;
			}
			
			.services-heading h2::after {
				content: '';
				position: absolute;
				bottom: -15px;
				left: 50%;
				transform: translateX(-50%);
				width: 80px;
				height: 3px;
				background-color: var(--primary-color);
			}
			
			.services-heading p {
				font-size: 1.1rem;
				color: var(--text-light);
			}
			
			.services-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
				gap: 2rem;
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 1.5rem;
			}
			
			.service-card {
				background-color: var(--light-color);
				border-radius: 8px;
				padding: 2.5rem 2rem;
				transition: var(--transition);
				height: 100%;
				box-shadow: 0 8px 30px rgba(0,0,0,0.05);
				display: flex;
				flex-direction: column;
			}
			
			.service-card:hover {
				transform: translateY(-10px);
				box-shadow: 0 15px 30px rgba(0,0,0,0.1);
			}
			
			.service-icon {
				width: 70px;
				height: 70px;
				background-color: rgba(0, 102, 204, 0.1);
				border-radius: 50%;
				display: flex;
				align-items: center;
				justify-content: center;
				margin-bottom: 1.5rem;
			}
			
			.service-icon svg {
				width: 32px;
				height: 32px;
				color: var(--primary-color);
			}
			
			.service-card h3 {
				font-size: 1.5rem;
				margin-bottom: 1rem;
				color: var(--text-color);
			}
			
			.service-card p {
				color: var(--text-light);
				margin-bottom: 1.5rem;
				flex-grow: 1;
			}
			
			.service-link {
				color: var(--primary-color);
				font-weight: 600;
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				transition: var(--transition);
			}
			
			.service-link:hover {
				gap: 0.8rem;
				color: var(--secondary-color);
			}
			
			/* Industries section */
			.industries {
				padding: 8rem 0;
				background-color: var(--light-color);
				position: relative;
				overflow: hidden;
			}
			
			.industries-content {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 1.5rem;
				position: relative;
				z-index: 2;
				display: flex;
				flex-direction: column;
				align-items: center;
				text-align: center;
			}
			
			.industries h2 {
				font-size: 3rem;
				margin-bottom: 2rem;
				color: var(--text-color);
				position: relative;
			}
			
			.industries h2 span {
				display: block;
				font-size: 1.5rem;
				font-weight: 500;
				color: var(--primary-color);
				margin-bottom: 0.5rem;
			}
			
			.counter-value {
				font-size: 6rem;
				font-weight: 800;
				color: var(--primary-color);
				margin: 2rem 0;
				display: flex;
				align-items: center;
				justify-content: center;
			}
			
			.counter-plus {
				font-size: 3rem;
				margin-left: 0.2rem;
			}
			
			/* FAQ section */
			.faq {
				padding: 8rem 0;
				background-color: #fff;
			}
			
			.faq-heading {
				text-align: center;
				max-width: 800px;
				margin: 0 auto 5rem;
				padding: 0 1.5rem;
			}
			
			.faq-heading h2 {
				font-size: 2.5rem;
				margin-bottom: 1rem;
				color: var(--text-color);
				position: relative;
				display: inline-block;
			}
			
			.faq-heading h2::after {
				content: '';
				position: absolute;
				bottom: -15px;
				left: 50%;
				transform: translateX(-50%);
				width: 80px;
				height: 3px;
				background-color: var(--primary-color);
			}
			
			.faq-grid {
				max-width: 1000px;
				margin: 0 auto;
				padding: 0 1.5rem;
			}
			
			.faq-item {
				margin-bottom: 1.5rem;
				border-radius: 8px;
				overflow: hidden;
				box-shadow: 0 8px 30px rgba(0,0,0,0.05);
			}
			
			.faq-question {
				background-color: var(--light-color);
				padding: 1.5rem;
				cursor: pointer;
				font-weight: 600;
				color: var(--text-color);
				display: flex;
				justify-content: space-between;
				align-items: center;
				transition: var(--transition);
			}
			
			.faq-question:hover {
				background-color: var(--primary-color);
				color: white;
			}
			
			.faq-number {
				background-color: var(--primary-color);
				color: white;
				width: 30px;
				height: 30px;
				border-radius: 50%;
				display: flex;
				align-items: center;
				justify-content: center;
				font-size: 0.9rem;
				margin-right: 1rem;
			}
			
			.faq-question.open {
				background-color: var(--primary-color);
				color: white;
			}
			
			.faq-arrow {
				transition: var(--transition);
			}
			
			.faq-question.open .faq-arrow {
				transform: rotate(180deg);
			}
			
			.faq-answer {
				background-color: white;
				padding: 0;
				max-height: 0;
				overflow: hidden;
				transition: all 0.3s ease;
			}
			
			.faq-answer.show {
				padding: 1.5rem;
				max-height: 500px;
			}
			
			.faq-answer p {
				color: var(--text-light);
				margin: 0;
			}
			
			/* CTA section */
			.cta {
				padding: 8rem 0;
				background-color: var(--primary-color);
				color: white;
				position: relative;
				overflow: hidden;
			}
			
			.cta::after {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background: linear-gradient(45deg, rgba(0,73,153,0.8) 0%, rgba(0,102,204,0.5) 100%);
			}
			
			.cta-content {
				max-width: 1000px;
				margin: 0 auto;
				padding: 0 1.5rem;
				text-align: center;
				position: relative;
				z-index: 2;
			}
			
			.cta h2 {
				font-size: 3.5rem;
				margin-bottom: 2rem;
				font-weight: 700;
			}
			
			.cta-buttons {
				display: flex;
				justify-content: center;
				gap: 1.5rem;
			}
			
			/* Contact form section */
			.contact {
				padding: 8rem 0;
				background-color: #fff;
			}
			
			.contact-grid {
				display: grid;
				grid-template-columns: repeat(12, 1fr);
				gap: 3rem;
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 1.5rem;
			}
			
			.contact-info {
				grid-column: span 4;
			}
			
			.contact-form {
				grid-column: span 8;
			}
			
			.contact-title {
				font-size: 2.5rem;
				margin-bottom: 2rem;
			}
			
			.contact-options {
				margin-top: 3rem;
			}
			
			.contact-option {
				margin-bottom: 2rem;
			}
			
			.contact-option h3 {
				font-size: 1.2rem;
				margin-bottom: 0.5rem;
				display: flex;
				align-items: center;
				gap: 0.5rem;
			}
			
			.contact-option h3 svg {
				color: var(--primary-color);
			}
			
			.form-grid {
				display: grid;
				grid-template-columns: repeat(2, 1fr);
				gap: 1.5rem;
				margin-bottom: 1.5rem;
			}
			
			.form-group {
				margin-bottom: 1.5rem;
			}
			
			.form-label {
				display: block;
				margin-bottom: 0.5rem;
				font-weight: 500;
			}
			
			.form-control {
				width: 100%;
				padding: 0.8rem 1rem;
				font-size: 1rem;
				border: 1px solid #ddd;
				border-radius: 4px;
				transition: var(--transition);
			}
			
			.form-control:focus {
				border-color: var(--primary-color);
				box-shadow: 0 0 0 2px rgba(0, 102, 204, 0.2);
				outline: none;
			}
			
			textarea.form-control {
				min-height: 150px;
				resize: vertical;
			}
			
			.submit-btn {
				background-color: var(--primary-color);
				color: white;
				border: none;
				padding: 1rem 2rem;
				font-size: 1rem;
				font-weight: 600;
				border-radius: 4px;
				cursor: pointer;
				transition: var(--transition);
			}
			
			.submit-btn:hover {
				background-color: var(--secondary-color);
				transform: translateY(-3px);
			}
			
			/* Mobile styles */
			@media (max-width: 992px) {
				.hero h1 {
					font-size: 3.2rem;
				}
				
				.services-grid {
					grid-template-columns: 1fr;
				}
				
				.hero-buttons {
					flex-direction: column;
					align-items: flex-start;
				}
				
				.contact-grid {
					grid-template-columns: 1fr;
				}
				
				contact-info, .contact-form {
					grid-column: span 12;
				}
				
				.form-grid {
					grid-template-columns: 1fr;
				}
			}
			
			@media (max-width: 768px) {
				.hero h1 {
					font-size: 2.8rem;
				}
				
				.services-heading h2, .faq-heading h2 {
					font-size: 2rem;
				}
				
				.stat-number {
					font-size: 3rem;
				}
				
				.industries h2 {
					font-size: 2.5rem;
				}
				
				.counter-value {
					font-size: 5rem;
				}
				
				.cta h2 {
					font-size: 2.8rem;
				}
				
				.cta-buttons {
					flex-direction: column;
				}
			}
		</style>
	</head>
	<body>
		<!-- Page Loader -->
		<div class="page-loader">
			<img src="/favicon.svg" alt="BlackLine Logo" class="loader-logo">
		</div>
		
		<Header />
		
		<main>
			<!-- Hero Section -->
			<section class="hero">
				<div class="hero-content">
					<div class="hero-text">
						<h1>The IT Industry is broken.<br>We're here to fix it.</h1>
						<p>
							Many businesses face slow, inefficient systems, data silos, and frequent downtime. 
							These bottlenecks not only frustrate teams but also hit your bottom line—lost opportunities, 
							decreased customer satisfaction, and heightened security risks.
						</p>
						<p>
							We offer solutions that eliminate these disruptions.
						</p>
						<p>
							Each of our engineers can support up to 250 of your employees to ensure smooth operations. 
							With a 99% response and resolution rate within SLA standards, we resolve issues in minutes, 
							not hours, so you can stay focused on what matters.
						</p>
						<div class="hero-buttons">
							<a href="/manifesto" class="btn btn-outline">Read Our Manifesto</a>
							<a href="/contact" class="btn btn-primary">Schedule a Free Assessment</a>
						</div>
					</div>
				</div>
			</section>
			
			<!-- Stats Counter Section -->
			<section class="stats-counter">
				<div class="stats-grid">
					<div class="stat-item">
						<div class="stat-number">20<span class="stat-plus">+</span></div>
						<div class="stat-label">years of experience</div>
					</div>
					<div class="stat-item">
						<div class="stat-number">150k<span class="stat-plus">+</span></div>
						<div class="stat-label">endpoints managed</div>
					</div>
					<div class="stat-item">
						<div class="stat-number">99<span class="stat-plus">%</span></div>
						<div class="stat-label">resolution rate</div>
					</div>
				</div>
			</section>
			
			<!-- Services Section -->
			<section class="services">
				<div class="services-heading">
					<h2>Comprehensive IT Services</h2>
					<p>Proactive solutions that transform your technology into a powerful business asset</p>
				</div>
				
				<div class="services-grid">
					<div class="service-card">
						<div class="service-icon">
							<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect><line x1="8" y1="21" x2="16" y2="21"></line><line x1="12" y1="17" x2="12" y2="21"></line></svg>
